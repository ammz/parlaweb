<metal:master use-macro="load: master.pt">

    <metal:slot fill-slot="content">

	<div class="row">
	    <div class="col-md-12">
		<div tal:condition="intervenciones" id="tabla-intervenciones">
		    <table id="t_intervenciones" class="table table-striped table-hover">
			<tr>
			    <th>id</th>
			    <th>Fecha</th>
			    <th>Intervenci√≥n</th>
			    <th colspan="2">Acciones</th>
			</tr>

			<tr tal:repeat="i intervenciones">
			    <td tal:content="i.id"></td>
			    <td tal:content="i.fecha"></td>
			    <td>
				<span class="anchor" id="${i.id}"></span>
				<a tal:content="i.nombre" href="${i.enlace}" target="_blank"></a>
				<span tal:repeat="etiq i.lista_etiquetas">
				    <button tal:condition="etiq" type="button" class="btn btn-info btn-xs">${etiq}
				    </button>
				</span>
				<span tal:repeat="etiq i.lista_provincias">
				    <button tal:condition="etiq" type="button" class="btn btn-warning btn-xs">${etiq}
				    </button>
				</span>

			    </td>
			    <td>
				<a href="../intervenciones/${i.id}"><button type="button" class="btn btn-warning btn-default btn-xs">Editar</button></a>
			    </td>
			    <td>
				<a href="../delete_interv/${i.id}"><button type="button" class="btn btn-danger btn-default btn-xs">Borrar</button></a>
			    </td>
			</tr>
		    </table>
		</div>
	    </div>
	</div>

    </metal:slot>

</metal:master>
